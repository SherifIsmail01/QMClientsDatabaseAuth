<!DOCTYPE html>
<html>
  <head>
    <title>QMClientsDatabase</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

  </head>

  <body>
  	<header>

      <h3>Q&M Clients Database</h3>

  		<section id = "login">
  		    <% if current_user %>
            <div id = "qm-resources">
              <%= link_to "QM Resources", qm_resources_path %>
            </div>
            <div id = "user-profile">
  		        <%= link_to "Profile", user_path(current_user) %>
            </div>
            <div id = "logout">
  		        <%= link_to "Log Out", logout_path %>
            </div>
  		    <% else %>
            <div id = "create-account">
  		        <%= link_to "Create Account", new_user_path %>
            </div>
            <div id = "login">
  		        <%= link_to "Log In", login_path %>
            </div>
  		    <% end %>
  		</section>

      <section>
          <div id = "auditors_link">
            <%= link_to "Auditors", auditors_path %>
          </div><br>

          <div id= "homepage_link">
            <%= link_to "Home Page", home_page_path %>
          </div><br>

          <div id = "analysis_link">
            <%= link_to "Analysis", auditors_path %>
          </div>
      </section>

    </header>

    <section id="main-page-body">
    	<% flash.each do |name, msg| %>
		  <p><small> <%= name.capitalize %>: <%= msg %> </small></p>
		  <% end %>

      <%= yield %>
    </section>

    <footer>
        <p>Quigley & Miron CPAs, Inc.</p>
    </footer>

  </body>
</html>
