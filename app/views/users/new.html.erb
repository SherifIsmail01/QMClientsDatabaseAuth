Sign Up

<div id="new-user-form">
	<%= form_for @user do |f| %>
	  <div>
	    Username: <%= f.text_field :user_name, placeholder: "User Name", :class => 'form-control'  %>
	  </div>
	  <div>
	    Password: <%= f.password_field :password, placeholder: "Password", :class => 'form-control'  %>
	  </div>
	  <%= f.submit "Sign Up", :class => 'btn btn-primary'  %>
	  <!-- redirect_to  -->
	<% end %>
</div>
